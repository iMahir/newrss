{
  "compilerOptions": {
    "lib": ["ES2023", "DOM"],
    "module": "node16",
    "target": "ES2022",
    "moduleResolution": "node16",

    "rootDir": "src",
    "outDir": "build",

    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "allowJs": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", "workers"]
}
